generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Job {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  location        String
  salary          Int
  employment_type String
  job_type        String
}

model User {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  email       String        @unique
  password    String
  role        String?
  company     Company?
  review      Review[]
  Applictaion Applictaion[]
}

model Company {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  owner_id    String  @unique @db.ObjectId
  description String
  image       String?
  name        String
  owner       User    @relation(fields: [owner_id], references: [id])

  job Openings[]
}

model Openings {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  location        String
  salary          Int
  employment_type String
  job_type        String
  company_id      String  @db.ObjectId
  company         Company @relation(fields: [company_id], references: [id])

  Applictaion Applictaion[]
}

model Review {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  content    String
  user_id    String @db.ObjectId
  user       User   @relation(fields: [user_id], references: [id])
  company_id String
}

model Applictaion {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id String   @db.ObjectId
  user    User     @relation(fields: [user_id], references: [id])
  job_id  String   @db.ObjectId
  job     Openings @relation(fields: [job_id], references: [id])
}
